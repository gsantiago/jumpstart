/*
Stylus variables are information about icon's compiled state, stored under its original file name

.icon-home {
  width: $icon_home_width;
}

The large array-like variables contain all information about a single icon
$icon_home = x y offset_x offset_y width height total_width total_height image_path;

At the bottom of this section, we provide information about the spritesheet itself
$spritesheet = width height image $spritesheet_sprites;
*/
$circle_name = 'circle';
$circle_x = 0px;
$circle_y = 0px;
$circle_offset_x = 0px;
$circle_offset_y = 0px;
$circle_width = 16px;
$circle_height = 16px;
$circle_total_width = 32px;
$circle_total_height = 16px;
$circle_image = '../img/sprite.png';
$circle = 0px 0px 0px 0px 16px 16px 32px 16px '../img/sprite.png' 'circle';
$close_name = 'close';
$close_x = 16px;
$close_y = 0px;
$close_offset_x = -16px;
$close_offset_y = 0px;
$close_width = 16px;
$close_height = 16px;
$close_total_width = 32px;
$close_total_height = 16px;
$close_image = '../img/sprite.png';
$close = 16px 0px -16px 0px 16px 16px 32px 16px '../img/sprite.png' 'close';
$spritesheet_width = 32px;
$spritesheet_height = 16px;
$spritesheet_image = '../img/sprite.png';
$spritesheet_sprites = $circle $close;
$spritesheet = 32px 16px '../img/sprite.png' $spritesheet_sprites;

/*
The provided mixins are intended to be used with the array-like variables

.icon-home {
  spriteWidth($icon_home)
}

.icon-email {
  sprite($icon_email)
}
*/
spriteWidth($sprite) {
  width: $sprite[4];
}

spriteHeight($sprite) {
  height: $sprite[5];
}

spritePosition($sprite) {
  background-position: $sprite[2] $sprite[3];
}

spriteImage($sprite) {
  background-image: url($sprite[8]);
}

sprite($sprite) {
  spriteImage($sprite)
  spritePosition($sprite)
  spriteWidth($sprite)
  spriteHeight($sprite)
}

/*
The `sprites` mixin generates identical output to the CSS template
  but can be overridden inside of Stylus

This must be run when you have at least 2 sprites.
  If run with a single sprite, then there will be reference errors.

sprites($spritesheet_sprites);
*/
sprites($sprites) {
  for $sprite in $sprites {
    $sprite_name = $sprite[9];
    .{$sprite_name} {
      sprite($sprite);
    }
  }
}
