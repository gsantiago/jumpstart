/* ========================================================================== *\
    Slick Base CSS
*\ ========================================================================== */

.slick-slider
  position relative
  display block
  box-sizing border-box
  user-select none

  -webkit-touch-callout none
  -ms-touch-action pan-y
  touch-action pan-y
  -webkit-tap-highlight-color transparent


.slick-list
  position relative
  display block
  overflow hidden
  margin 0
  padding 0

  &:focus
    outline none

  &.dragging
    cursor pointer
    cursor hand

.slick-slider
  .slick-track,
  .slick-list
    transform translate3d(0,0,0)

.slick-track
  position relative
  top 0
  left 0
  display block
  clearfix()

  .slick-loading &
    visibility hidden

.slick-slide
  display none
  float left
  height 100%
  min-height 1px

  &[dir='rlt']
    float right

.slick-slide img
  display block

.slick-slide.slick-loading img
  display none

.slick-initialized .slick-slide
  display block

.slick-loading .slick-slide
  visibility hidden

.slick-vertical .slick-slide
  display block
  height auto
  border 1px solid transparent
