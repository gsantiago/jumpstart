// =============================================================================
// image-block
// -----------------------------------------------------------------------------
// A component for responsive images. It remains centered inside the block.
//
// Usage:
// ```
// <div class="image-block">
//   <img src="path/to/image.jpg" class="image">
// </div>
// ```
// =============================================================================

.image-block
  background-color #eee

  > .image
    display block
    max-width 100%
    height auto
    margin-left auto
    margin-right auto
